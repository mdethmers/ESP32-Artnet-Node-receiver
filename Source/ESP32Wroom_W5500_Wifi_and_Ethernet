function togglePinInputs() {
  var container = document.getElementById('pin-container');
  var enableCustomPins = document.getElementById('enableCustomPins').checked;
  container.style.display = enableCustomPins ? 'block' : 'none';
}

function toggleStaticIP() {
  var container = document.getElementById('static-ip-container');
  var useStaticIP = document.getElementById('useStaticIP').checked;
  container.style.display = useStaticIP ? 'block' : 'none';
}

function toggleRGBW() {
  var container = document.getElementById('rgbw-container');
  var useRGBW = document.getElementById('useRGBW').checked;
  container.style.display = useRGBW ? 'block' : 'none';
  
  // Update max LEDs label
  var maxLedsLabel = document.getElementById('maxLedsLabel');
  var numLedsInput = document.getElementById('numledsoutput');
  var maxLeds = useRGBW ? 510 : 680;
  maxLedsLabel.textContent = maxLeds;
  
  // Adjust current value if it exceeds new max
  if (parseInt(numLedsInput.value) > maxLeds) {
    numLedsInput.value = maxLeds;
  }
}

window.onload = function() {
  togglePinInputs();
  toggleStaticIP();
  toggleRGBW();
};
)";

