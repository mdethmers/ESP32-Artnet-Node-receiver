/**
 * ArtNet LED Controller for ESP32
 * Controls multiple LED strips via ArtNet protocol over Ethernet or WiFi
 * Provides web interface for configuration and supports static colors and test patterns
 */

// Feature configuration
#define DEBUG_ETHERNET_WEBSERVER_PORT Serial
#define _ETHERNET_WEBSERVER_LOGLEVEL_ 1  // Reduced log level for less overhead
#define UNIQUE_SUBARTNET

// LED configuration
#define MAX_LEDS_RGB 680              // Maximum LEDs for RGB (3 channels)
#define MAX_LEDS_RGBW 510             // Maximum LEDs for RGBW (4 channels)
#define NUM_LEDS_PER_STRIP MAX_LEDS_RGB  // For I2SClocklessLedDriver library compatibility
#define NUMSTRIPS 4                   // Maximum number of LED strips
#define UNIVERSE_SIZE_IN_CHANNEL 510  // Size of a universe (170 pixels * 3 channels for RGB, 127 for RGBW)
#define COLOR_RBG                     // Define color order (Green-Red-Blue)

// Hardware configuration
#define STATUS_LED_PIN 16
#define SCREEN_WIDTH 128
#define SCREEN_HEIGHT 32
#define OLED_RESET 4
#define SCREEN_ADDRESS 0x3C
#define BOOT_BUTTON_PIN 0

// Include necessary libraries
#include <Preferences.h>
#include <WebServer_ESP32_W5500.h>
#include <WebServer.h>
#include "I2SClocklessLedDriver.h"
#include "Arduino.h"
#include "artnetESP32V2.h"
#include <Adafruit_NeoPixel.h>
#include <SPI.h>
#include <Wire.h>
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>
#include <Update.h>
#include <WiFi.h>

// Default pin configuration
const int DEFAULT_PINS[NUMSTRIPS] = {12, 14, 27, 26};

// Forward declarations for functions
void setupWiFi();
void setupEthernet();
void setupEthernet();
void startAPMode();
void checkBootButton();
void handleColorSelection();
void cycleLEDs();
void setStatusLED(uint8_t r, uint8_t g, uint8_t b);
void applyStaticColor();
void loadSettings();
void saveSettings();
void handleRoot();
void handleConfig();
void resetToDefaultPins();
void updateStripPins();
void displayStatus(const String& line1, const String& line2 = "", const String& line3 = "", const String& line4 = "", bool showWiFiIcon = false);
void displayConnectionStatus(const String& type, int remainingTime = -1);
void drawWiFiIcon(int x, int y);
void handleOTAUpdate();
void handleDoUpdate();
void handleOTAUpdateResponse();
void printOTAProgress(size_t prg, size_t sz);
void ESP32_W5500_event(arduino_event_id_t event);
void ESP32_W5500_onEvent();

// Configuration structure
struct Settings {
  int numLedsPerOutput = 680;
  int numOutputs = 4;
  int startUniverse = 0;
  int pins[NUMSTRIPS] = {12, 14, 27, 26};
  int ledBrightness = 255;
  String nodeName = "Artnet Node ESP32";
  String ssid = "";
  String password = "";
  bool useWiFi = false;
  String staticColor = "#000000";
  bool enStatColor = false;
  bool enableCustomPins = false;
  bool ledCycleEnabled = false; 
  bool useStaticIP = false;
  String staticIP = "192.168.1.100";
  String gateway = "192.168.1.1";
  String subnet = "255.255.255.0";
  int networkMode = 0; // 0: Ethernet, 1: WiFi, 2: AP
  bool useRGBW = false; // false = RGB (3 channels), true = RGBW (4 channels)
  int whiteLevel = 0; // White channel level for RGBW (0-255)
};

// Runtime state
struct State {
  bool isAPMode = false;
  bool ledCycleEnabled = false;
  bool isStaticColorSet = false;
  uint8_t currentColor = 0;  // 0 = Red, 1 = Green, 2 = Blue
  unsigned long lastUpdate = 0;
  unsigned long startAttemptTime = 0;
  bool ledState = false;
  
  // Color selection state for standalone static color mode
  bool colorSelectionMode = false;
  int selectedColorIndex = 0;
  unsigned long lastBlinkTime = 0;
  bool displayBlink = false;
};

// Preset colors for standalone static color mode
const int PRESET_COLORS_COUNT = 10;
const String presetColors[PRESET_COLORS_COUNT] = {
  "#FF0000", // Red
  "#00FF00", // Green  
  "#0000FF", // Blue
  "#FFFF00", // Yellow
  "#FF00FF", // Magenta
  "#00FFFF", // Cyan
  "#FFFFFF", // White
  "#FF8000", // Orange
  "#8000FF", // Purple
  "#000000"  // Black/Off
};

// Constants
const unsigned long CYCLE_DELAY = 1000;         // Change color every 1 second

// Global objects
Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, OLED_RESET);
Adafruit_NeoPixel StatusLed(1, STATUS_LED_PIN, NEO_GRB + NEO_KHZ800);
WebServer server(80);
Preferences preferences;
artnetESP32V2 artnet = artnetESP32V2();
I2SClocklessLedDriver driver;

// LED storage - allocate for maximum size (4 channels * 4 strips * 680 LEDs)
uint8_t ledData[4 * NUMSTRIPS * MAX_LEDS_RGB];

// Settings and state
Settings settings;
State state;

// Helper functions to get current LED configuration
int getMaxLedsPerStrip() {
  return settings.useRGBW ? MAX_LEDS_RGBW : MAX_LEDS_RGB;
}

int getChannelsPerLed() {
  return settings.useRGBW ? 4 : 3;
}

// LED strip objects - will be reconfigured in setup based on RGB/RGBW setting
Adafruit_NeoPixel strips[NUMSTRIPS] = {
  Adafruit_NeoPixel(MAX_LEDS_RGB, DEFAULT_PINS[0], NEO_BRG + NEO_KHZ800),
  Adafruit_NeoPixel(MAX_LEDS_RGB, DEFAULT_PINS[1], NEO_BRG + NEO_KHZ800),
  Adafruit_NeoPixel(MAX_LEDS_RGB, DEFAULT_PINS[2], NEO_BRG + NEO_KHZ800),
  Adafruit_NeoPixel(MAX_LEDS_RGB, DEFAULT_PINS[3], NEO_BRG + NEO_KHZ800)
};

// ArtNet callback function
void displayfunction(void *param) {
  subArtnet *subartnet = (subArtnet *)param;
  driver.showPixels(NO_WAIT, subartnet->data);
}

/**
 * Main setup function
 */
void setup() {
  Serial.begin(115200);
  
  // Initialize status LED
  StatusLed.begin();
  setStatusLED(255, 255, 0);  // Yellow during initialization
  
  // Initialize OLED display
  if(!display.begin(SSD1306_SWITCHCAPVCC, SCREEN_ADDRESS)) {
    Serial.println(F("SSD1306 allocation failed"));
  }
  displayStatus("Initializing...");
  
  // Load settings from preferences
  loadSettings();
  
  // Enforce LED count limits based on RGB/RGBW mode
  int maxLeds = getMaxLedsPerStrip();
  if (settings.numLedsPerOutput > maxLeds) {
    settings.numLedsPerOutput = maxLeds;
    saveSettings();
  }
  
  // Reconfigure LED strips based on RGB/RGBW setting
  uint16_t pixelType = settings.useRGBW ? (NEO_GRBW + NEO_KHZ800) : (NEO_BRG + NEO_KHZ800);
  for (int i = 0; i < NUMSTRIPS; i++) {
    strips[i].updateType(pixelType);
    strips[i].updateLength(settings.numLedsPerOutput);
  }
  
  // Update strip pins based on loaded settings
  updateStripPins();
  
  // Set all LEDs to black (off) before initializing driver
  for (int i = 0; i < settings.numOutputs; i++) {
    strips[i].begin();
    for (int j = 0; j < settings.numLedsPerOutput; j++) {
      strips[i].setPixelColor(j, 0);  // Set to black (off)
    }
    strips[i].show();
  }
  Serial.println("All LEDs set to black");
  
  // Initialize LED driver with correct color order
  int channelsPerLed = getChannelsPerLed();
  colorarrangment colorOrder = settings.useRGBW ? ORDER_GRBW : ORDER_GRB;

  driver.initled(ledData, settings.pins, NUMSTRIPS, settings.numLedsPerOutput, colorOrder);
  driver.setBrightness(settings.ledBrightness);
  
  // Initialize networking
  pinMode(BOOT_BUTTON_PIN, INPUT_PULLUP);
  state.startAttemptTime = millis();
  
  switch (settings.networkMode) {
    case 0: // Ethernet
      setupEthernet();
      break;
    case 1: // WiFi
      setupWiFi();
      break;
    case 2: // AP Mode
      startAPMode();
      break;
    case 3: // RGB Test - standalone mode, no network
      displayStatus("RGB Test Mode", "Cycling colors...", "Press button to exit");
      Serial.println("RGB Test Mode - No network initialized");
      // Don't initialize any network, just show the display and let loop handle LEDs
      return; // Skip ArtNet setup
      break;
    case 4: // Static Color - standalone mode, no network
      displayStatus("Static Color Mode", "Color: " + settings.staticColor, "Press button to exit");
      Serial.println("Static Color Mode - No network initialized");
      // Don't initialize any network, just show the display and let loop handle LEDs
      return; // Skip ArtNet setup
      break;
    default:
      setupEthernet();
      break;
  }
  
  // If not in AP mode, set up ArtNet
  if (!state.isAPMode) {
    IPAddress activeIP = (settings.networkMode == 1) ? WiFi.localIP() : ETH.localIP();
    
    // Update display with connection info
    String ipStr = activeIP.toString();
    String ledsInfo = "LEDs:" + String(settings.numLedsPerOutput) + 
                      " Out:" + String(settings.numOutputs);
    displayStatus(settings.nodeName, ipStr, ledsInfo);
    
    int universeSize = settings.useRGBW ? (128 * 4) : (170 * 3);  // 512 for RGBW, 510 for RGB

    artnet.addSubArtnet(
      settings.startUniverse, 
      settings.numLedsPerOutput * settings.numOutputs * channelsPerLed, 
      universeSize, 
      &displayfunction
    );
    artnet.setNodeName(settings.nodeName);
    
    if (artnet.listen(activeIP, 6454)) {
      Serial.print("Artnet Listening on IP: ");
      Serial.println(activeIP);
    }
  }
}

/**
 * Main loop function
 */
void loop() {
  // Always check boot button regardless of mode
  checkBootButton();
  
  // Handle standalone LED modes (no network)
  if (settings.networkMode == 3 || settings.networkMode == 4) {
    // RGB Test or Static Color mode - no network, just LED patterns
    if (settings.networkMode == 3 && settings.ledCycleEnabled) {
      cycleLEDs();
    } else if (settings.networkMode == 4) {
      if (state.colorSelectionMode) {
        // In color selection mode
        handleColorSelection();
      } else {
        // Normal static color mode
        if (settings.enStatColor && !state.isStaticColorSet) {
          applyStaticColor();
          state.isStaticColorSet = true;
        }
      }
    }
    return; // Skip all network handling
  }
  
  // Handle web server requests (only for network modes)
  server.handleClient();

  if (!state.isAPMode) {
    static bool wasDisconnected = true;  // Start as true to detect initial connection
    static bool lastConnectionState = false;  // Track previous connection state
    bool networkDisconnected = false;
    
    if (settings.networkMode == 1) {
      // WiFi mode
      networkDisconnected = (WiFi.status() != WL_CONNECTED);
      bool currentlyConnected = !networkDisconnected;
      
      if (networkDisconnected) {
        // Handle WiFi disconnection with blinking red LED
        static unsigned long lastBlinkTime = 0;
        
        if (!wasDisconnected) {
          // Just disconnected
          Serial.println("WiFi disconnected");
          wasDisconnected = true;
        }
        
        if (millis() - lastBlinkTime >= 500) {  // Blink every 500ms
          lastBlinkTime = millis();
          state.ledState = !state.ledState;
          setStatusLED(state.ledState ? 255 : 0, 0, 0);  // Blinking red
          
          // Update display to show waiting for WiFi
          displayStatus("Waiting for Wi-Fi");
        }
      } else {
        // Connected - check if we just connected or reconnected
        if (wasDisconnected || !lastConnectionState) {
          setStatusLED(0, 255, 0);  // Green LED
          
          // Create display info with LEDs and outputs count
          String ipInfo = "WiFi: " + WiFi.localIP().toString();
          String ledsInfo = "LEDs:" + String(settings.numLedsPerOutput) + 
                            " Out:" + String(settings.numOutputs);
          
          displayStatus(settings.nodeName, ipInfo, ledsInfo, "", true);  // Show WiFi icon
          wasDisconnected = false;
          Serial.println("WiFi connected - IP: " + WiFi.localIP().toString());
        }
      }
      
      lastConnectionState = currentlyConnected;
      
    } else if (settings.networkMode == 0) {
      // Ethernet mode - check IP address
      networkDisconnected = (ETH.localIP() == INADDR_NONE);
      bool currentlyConnected = !networkDisconnected;
      
      if (networkDisconnected) {
        // Handle ethernet disconnection with blinking red LED
        static unsigned long lastBlinkTime = 0;
        
        if (!wasDisconnected) {
          // Just disconnected
          Serial.println("Ethernet disconnected");
          wasDisconnected = true;
        }
        
        if (millis() - lastBlinkTime >= 500) {  // Blink every 500ms
          lastBlinkTime = millis();
          state.ledState = !state.ledState;
          setStatusLED(state.ledState ? 255 : 0, 0, 0);  // Blinking red
          
          // Update display to show waiting for ethernet
          displayStatus("Waiting for Ethernet");
        }
      } else {
        // Connected - check if we just connected or reconnected
        if (wasDisconnected || !lastConnectionState) {
          setStatusLED(0, 255, 0);  // Green LED
          
          // Create display info with LEDs and outputs count
          String ipInfo = settings.useStaticIP ? "Static: " + settings.staticIP : "DHCP: " + ETH.localIP().toString();
          String ledsInfo = "LEDs:" + String(settings.numLedsPerOutput) + 
                            " Out:" + String(settings.numOutputs);
          
          displayStatus(settings.nodeName, ipInfo, ledsInfo);
          wasDisconnected = false;
          Serial.println("Ethernet connected - IP: " + ETH.localIP().toString());
        }
      }
      
      lastConnectionState = currentlyConnected;
    }
  }
  
  // Handle LED test cycle or static color
  if (settings.enStatColor && !state.isStaticColorSet) {
    applyStaticColor();
    state.isStaticColorSet = true;
  } else if (settings.ledCycleEnabled) {
    cycleLEDs();
    state.isStaticColorSet = false;
  } else if (!settings.enStatColor) {
    state.isStaticColorSet = false;
  }
}

/**
 * Update all LED strip pins according to settings
 */
void updateStripPins() {
  for (int i = 0; i < NUMSTRIPS; i++) {
    if (strips[i].getPin() != settings.pins[i]) {
      Serial.printf("Strip %d pin changed from %d to %d\n", 
                    i, strips[i].getPin(), settings.pins[i]);
      
      strips[i].setPin(settings.pins[i]);
      strips[i].begin();
    }
  }
}

/**
 * Load settings from preferences
 */
void loadSettings() {
  preferences.begin("esp32config", true);
  
  settings.numLedsPerOutput = preferences.getInt("numledsoutput", settings.numLedsPerOutput);
  settings.numOutputs = preferences.getInt("numoutput", settings.numOutputs);
  settings.startUniverse = preferences.getInt("startuniverse", settings.startUniverse);
  settings.nodeName = preferences.getString("nodename", settings.nodeName);
  settings.ledBrightness = preferences.getInt("ledbrightness", settings.ledBrightness);
  settings.ssid = preferences.getString("ssid", settings.ssid);
  settings.password = preferences.getString("password", settings.password);
  settings.useWiFi = preferences.getBool("useWiFi", settings.useWiFi);
  settings.staticColor = preferences.getString("staticColor", settings.staticColor);
  settings.enStatColor = preferences.getBool("enStatColor", settings.enStatColor);
  settings.enableCustomPins = preferences.getBool("enCustomPins", false);
  settings.ledCycleEnabled = preferences.getBool("ledCycleEnabled", false);
  settings.useStaticIP = preferences.getBool("useStaticIP", settings.useStaticIP);
  settings.staticIP = preferences.getString("staticIP", settings.staticIP);
  settings.gateway = preferences.getString("gateway", settings.gateway);
  settings.gateway = preferences.getString("gateway", settings.gateway);
  settings.subnet = preferences.getString("subnet", settings.subnet);
  settings.networkMode = preferences.getInt("networkMode", -1);
  settings.useRGBW = preferences.getBool("useRGBW", settings.useRGBW);
  settings.whiteLevel = preferences.getInt("whiteLevel", settings.whiteLevel);

  // Default network mode logic if not set
  if (settings.networkMode == -1) {
    settings.networkMode = settings.useWiFi ? 1 : 0;
  }
  
  // Load pins
  for (int i = 0; i < NUMSTRIPS; i++) {
    char pinKey[10];
    sprintf(pinKey, "pin%d", i);
    settings.pins[i] = preferences.getInt(pinKey, DEFAULT_PINS[i]);
  }
  
  // If custom pins not enabled, use default pins
  if (!settings.enableCustomPins) {
    for (int i = 0; i < NUMSTRIPS; i++) {
      settings.pins[i] = DEFAULT_PINS[i];
    }
  }
  
  preferences.end();
}

/**
 * Reset pins to default values
 */
void resetToDefaultPins() {
  for (int i = 0; i < NUMSTRIPS; i++) {
    settings.pins[i] = DEFAULT_PINS[i];
  }
}

/**
 * Save settings to preferences
 */
void saveSettings() {
  preferences.begin("esp32config", false);
  
  preferences.putInt("numledsoutput", settings.numLedsPerOutput);
  preferences.putInt("numoutput", settings.numOutputs);
  preferences.putInt("startuniverse", settings.startUniverse);
  preferences.putString("nodename", settings.nodeName);
  preferences.putInt("ledbrightness", settings.ledBrightness);
  preferences.putString("ssid", settings.ssid);
  preferences.putString("password", settings.password);
  preferences.putBool("useWiFi", settings.useWiFi);
  preferences.putString("staticColor", settings.staticColor);
  preferences.putBool("enStatColor", settings.enStatColor);
  preferences.putBool("enCustomPins", settings.enableCustomPins);
  preferences.putBool("ledCycleEnabled", settings.ledCycleEnabled);
  preferences.putBool("useStaticIP", settings.useStaticIP);
  preferences.putString("staticIP", settings.staticIP);
  preferences.putString("gateway", settings.gateway);
  preferences.putString("gateway", settings.gateway);
  preferences.putString("subnet", settings.subnet);
  preferences.putInt("networkMode", settings.networkMode);
  preferences.putBool("useRGBW", settings.useRGBW);
  preferences.putInt("whiteLevel", settings.whiteLevel);
  
  // Save pins
  for (int i = 0; i < NUMSTRIPS; i++) {
    char pinKey[10];
    sprintf(pinKey, "pin%d", i);
    preferences.putInt(pinKey, settings.pins[i]);
  }
  
  preferences.end();
}

/**
 * Draw a simple WiFi icon at specified coordinates
 */
void drawWiFiIcon(int x, int y) {
  // Draw WiFi signal bars (simple 3-bar icon)
  // Bar 1 (shortest)
  display.drawPixel(x, y + 5, SSD1306_WHITE);
  display.drawPixel(x, y + 6, SSD1306_WHITE);
  display.drawPixel(x, y + 7, SSD1306_WHITE);
  
  // Bar 2 (medium)
  display.drawPixel(x + 2, y + 3, SSD1306_WHITE);
  display.drawPixel(x + 2, y + 4, SSD1306_WHITE);
  display.drawPixel(x + 2, y + 5, SSD1306_WHITE);
  display.drawPixel(x + 2, y + 6, SSD1306_WHITE);
  display.drawPixel(x + 2, y + 7, SSD1306_WHITE);
  
  // Bar 3 (tallest)
  display.drawPixel(x + 4, y + 1, SSD1306_WHITE);
  display.drawPixel(x + 4, y + 2, SSD1306_WHITE);
  display.drawPixel(x + 4, y + 3, SSD1306_WHITE);
  display.drawPixel(x + 4, y + 4, SSD1306_WHITE);
  display.drawPixel(x + 4, y + 5, SSD1306_WHITE);
  display.drawPixel(x + 4, y + 6, SSD1306_WHITE);
  display.drawPixel(x + 4, y + 7, SSD1306_WHITE);
  
}

/**
 * Display multiple lines on the OLED screen with optional WiFi icon
 */
void displayStatus(const String& line1, const String& line2, const String& line3, const String& line4, bool showWiFiIcon) {
  display.clearDisplay();
  display.setTextSize(1);
  display.setTextColor(SSD1306_WHITE);
  
  display.setCursor(0, 0);
  display.println(line1);
  
  if (line2.length() > 0) {
    display.setCursor(0, 9);
    display.println(line2);
  }
  
  if (line3.length() > 0) {
    display.setCursor(0, 18);
    display.println(line3);
  }
  
  if (line4.length() > 0) {
    display.setCursor(0, 27);
    display.println(line4);
  }
  
  // Draw WiFi icon in bottom right if requested
  if (showWiFiIcon) {
    drawWiFiIcon(SCREEN_WIDTH - 8, SCREEN_HEIGHT - 10);
  }
  
  display.display();
}

/**
 * Display connection status with timeout
 */
void displayConnectionStatus(const String& type, int remainingTime) {
  String line1 = "Waiting for " + type;
  String line2 = "";
  
  if (remainingTime >= 0) {
    line2 = "Timeout in: " + String(remainingTime) + "s";
  }
  
  displayStatus(line1, line2);
}

/**
 * Handle color selection display and LED updates
 */
void handleColorSelection() {
  // Handle blinking display
  if (millis() - state.lastBlinkTime >= 500) {
    state.lastBlinkTime = millis();
    state.displayBlink = !state.displayBlink;
    
    if (state.displayBlink) {
      // Show color info
      displayStatus("Color Selection", 
                    "Color: " + presetColors[state.selectedColorIndex]);
    } else {
      // Blank display for blink effect
      displayStatus("", 
                    "");
    }
  }
  
  // Update LEDs with selected color
  uint32_t color = strtol(presetColors[state.selectedColorIndex].substring(1).c_str(), NULL, 16);
  
  // Extract RGB components for status LED
  uint8_t r = (color >> 16) & 0xFF;
  uint8_t g = (color >> 8) & 0xFF;
  uint8_t b = color & 0xFF;
  
  // Set status LED to match the selected color
  setStatusLED(r, g, b);
  
  // Apply to LED strips
  for (int i = 0; i < settings.numOutputs; i++) {
    for (int j = 0; j < settings.numLedsPerOutput; j++) {
      strips[i].setPixelColor(j, color);
    }
    strips[i].show();
  }
}

/**
 * Check if boot button is pressed to switch mode
 */
void checkBootButton() {
  if (digitalRead(BOOT_BUTTON_PIN) == LOW) {
    unsigned long pressTime = millis();
    
    // Wait for button release or long press threshold
    while(digitalRead(BOOT_BUTTON_PIN) == LOW) {
      unsigned long pressDuration = millis() - pressTime;
      
      // Long press (1000ms) - handle based on current mode
      if (pressDuration > 1000) {
        Serial.println("long press triggered");
        if (settings.networkMode == 0) {
          // In Ethernet mode - toggle between Static IP and DHCP
          Serial.println("toggle between Static IP and DHCP");
          settings.useStaticIP = !settings.useStaticIP;
          saveSettings();
          
          // Show feedback on display
          if (settings.useStaticIP) {
            displayStatus("Switching to", "Static IP", settings.staticIP);
            Serial.println("Switching to Static IP: " + settings.staticIP);
          } else {
            displayStatus("Switching to", "DHCP");
            Serial.println("Switching to DHCP");
          }
          
          // Wait for button release
          while(digitalRead(BOOT_BUTTON_PIN) == LOW) {
            delay(10);
          }
          
          delay(1000);
          ESP.restart();
          return;
        } else if (settings.networkMode == 4) {
          // In standalone static color mode - toggle color selection
          state.colorSelectionMode = !state.colorSelectionMode;
          
          if (state.colorSelectionMode) {
            // Entering color selection mode - start blinking immediately
            Serial.println("Entering color selection mode");
            // Find current color index
            for (int i = 0; i < PRESET_COLORS_COUNT; i++) {
              if (settings.staticColor == presetColors[i]) {
                state.selectedColorIndex = i;
                break;
              }
            }
            // Start blinking immediately to show we entered selection mode
            state.lastBlinkTime = millis();
            state.displayBlink = true;
            displayStatus("Color Selection", 
                          "Color: " + presetColors[state.selectedColorIndex]);
          } else {
            // Exiting color selection mode - save selected color
            settings.staticColor = presetColors[state.selectedColorIndex];
            saveSettings();
            state.isStaticColorSet = false; // Force color update
            Serial.println("Color saved: " + settings.staticColor);
            
            // Stop blinking and ensure display is visible
            state.displayBlink = false;
            
            // Show normal static color display immediately
            displayStatus("Static Color Mode", "Color: " + settings.staticColor, "Press button to exit");
          }
          
          // Wait for button release
          while(digitalRead(BOOT_BUTTON_PIN) == LOW) {
            delay(10);
          }
          return;
        } else {
          // Normal mode switching for other modes
          break; // Continue to mode switching logic
        }
      }
      
      delay(10);
    }
    
    unsigned long pressDuration = millis() - pressTime;
    
    if (pressDuration > 100) {
      // Short press - handle based on current mode
      if (settings.networkMode == 4 && state.colorSelectionMode) {
        // In color selection mode - cycle through colors
        state.selectedColorIndex = (state.selectedColorIndex + 1) % 10;
        state.isStaticColorSet = false; // Force color update
        Serial.println("Selected color: " + presetColors[state.selectedColorIndex]);
      } else {
        // Normal mode switching for short press (except when in color selection)
        if (!(settings.networkMode == 4 && state.colorSelectionMode)) {
          // Cycle through 5 modes: 0=Ethernet, 1=WiFi, 2=AP, 3=RGB Test, 4=Static Color
          settings.networkMode = (settings.networkMode + 1) % 5;
          
          // Update settings based on networkMode
          switch (settings.networkMode) {
            case 0: // Ethernet
              settings.useWiFi = false;
              settings.ledCycleEnabled = false;
              settings.enStatColor = false;
              displayStatus("Switching Mode...", "Ethernet");
              break;
              
            case 1: // WiFi
              settings.useWiFi = true;
              settings.ledCycleEnabled = false;
              settings.enStatColor = false;
              displayStatus("Switching Mode...", "Wi-Fi");
              break;
              
            case 2: // AP Mode
              settings.useWiFi = false;
              settings.ledCycleEnabled = false;
              settings.enStatColor = false;
              displayStatus("Switching Mode...", "AP Mode");
              break;
              
            case 3: // RGB Test
              // Keep current useWiFi setting, enable RGB test
              settings.ledCycleEnabled = true;
              settings.enStatColor = false;
              displayStatus("Switching Mode...", "RGB Test Cycle");
              break;
              
            case 4: // Static Color
              // Keep current useWiFi setting, enable static color
              settings.ledCycleEnabled = false;
              settings.enStatColor = true;
              displayStatus("Switching Mode...", "Static Color");
              break;
          }
          
          saveSettings();
          delay(1000);
          ESP.restart();
        }
      }
    }
  }
}

/**
 * Set up WiFi connection
 */
void setupWiFi() {
  if (settings.useStaticIP) {
    IPAddress ip, gateway, subnet;
    if (ip.fromString(settings.staticIP) && 
        gateway.fromString(settings.gateway) && 
        subnet.fromString(settings.subnet)) {
      WiFi.config(ip, gateway, subnet);
    } else {
      Serial.println("Invalid static IP configuration");
    }
  }

  WiFi.begin(settings.ssid.c_str(), settings.password.c_str());
  displayStatus("Connecting to Wi-Fi...");
  
  while (WiFi.status() != WL_CONNECTED) {
    checkBootButton();
    
    // Toggle status LED
    state.ledState = !state.ledState;
    setStatusLED(state.ledState ? 255 : 0, 0, 0);
    
    displayConnectionStatus("Wi-Fi");
    
    delay(500);
  }

  // Set up web server
  server.on("/", HTTP_GET, handleRoot);
  server.on("/config", HTTP_POST, handleConfig);
  server.on("/update", HTTP_GET, handleOTAUpdate);
  server.on("/doUpdate", HTTP_POST, handleOTAUpdateResponse, handleDoUpdate);
  server.begin();
  
  displayStatus("Wi-Fi connected", settings.ssid);
  setStatusLED(0, 255, 0);
}

/**
 * Set up Ethernet connection
 */
void setupEthernet() {
  displayStatus("Initializing Ethernet");
  
  ESP32_W5500_onEvent();
  ETH.begin(MISO_GPIO, MOSI_GPIO, SCK_GPIO, CS_GPIO, INT_GPIO, SPI_CLOCK_MHZ, ETH_SPI_HOST);

  // Configure static IP if enabled
  if (settings.useStaticIP) {
    IPAddress ip, gateway, subnet;
    if (ip.fromString(settings.staticIP) && 
        gateway.fromString(settings.gateway) && 
        subnet.fromString(settings.subnet)) {
      ETH.config(ip, gateway, subnet);
      Serial.println("Using static IP: " + settings.staticIP);
    } else {
      Serial.println("Invalid static IP configuration, using DHCP");
    }
  }
  
  // Wait for ethernet connection and IP address
  while (ETH.localIP() == INADDR_NONE) {
    checkBootButton();
    
    // Toggle status LED
    state.ledState = !state.ledState;
    setStatusLED(state.ledState ? 255 : 0, 0, 0);
    displayConnectionStatus("Ethernet");
    
    delay(500);
  }
  
  // Set up web server routes
  server.on("/", HTTP_GET, handleRoot);
  server.on("/config", HTTP_POST, handleConfig);
  server.on("/update", HTTP_GET, handleOTAUpdate);
  server.on("/doUpdate", HTTP_POST, handleOTAUpdateResponse, handleDoUpdate);
  server.begin();
  
  // Connection established - display and LED will be updated by event handler
  Serial.println("Ethernet setup complete");
}

/**
 * Start Access Point mode
 */
void startAPMode() {
  state.isAPMode = true;
  WiFi.softAP(settings.nodeName.c_str());
  IPAddress IP = WiFi.softAPIP();
  
  // Set up web server
  server.on("/", HTTP_GET, handleRoot);
  server.on("/config", HTTP_POST, handleConfig);
  server.on("/update", HTTP_GET, handleOTAUpdate);
  server.on("/doUpdate", HTTP_POST, handleOTAUpdateResponse, handleDoUpdate);
  server.begin();
  
  // Set status LED to blue
  setStatusLED(0, 0, 255);
  
  // Update display
  displayStatus("AP Mode", settings.nodeName, "IP:" + IP.toString());
}

/**
 * Cycle LEDs through RGB(W) test pattern
 */
void cycleLEDs() {
  if (millis() - state.lastUpdate >= CYCLE_DELAY) {
    state.lastUpdate = millis();
    
    // Determine color based on cycle
    uint32_t color;
    if (settings.useRGBW) {
      // RGBW mode - cycle through R, G, B, W
      switch (state.currentColor) {
        case 0: color = strips[0].Color(settings.ledBrightness, 0, 0, 0); break;  // Red
        case 1: color = strips[0].Color(0, settings.ledBrightness, 0, 0); break;  // Green
        case 2: color = strips[0].Color(0, 0, settings.ledBrightness, 0); break;  // Blue
        case 3: color = strips[0].Color(0, 0, 0, settings.ledBrightness); break;  // White
      }
    } else {
      // RGB mode - cycle through R, G, B
      switch (state.currentColor) {
        case 0: color = strips[0].Color(settings.ledBrightness, 0, 0); break;  // Red
        case 1: color = strips[0].Color(0, settings.ledBrightness, 0); break;  // Green
        case 2: color = strips[0].Color(0, 0, settings.ledBrightness); break;  // Blue
      }
    }
    
    // Apply color to all strips
    for (int i = 0; i < settings.numOutputs; i++) {
      for (int j = 0; j < settings.numLedsPerOutput; j++) {
        strips[i].setPixelColor(j, color);
      }
      strips[i].show();
    }
    
    // Move to the next color in cycle
    int maxColors = settings.useRGBW ? 4 : 3;
    state.currentColor = (state.currentColor + 1) % maxColors;
  }
}

/**
 * Set status LED color
 */
void setStatusLED(uint8_t r, uint8_t g, uint8_t b) {
  StatusLed.setPixelColor(0, StatusLed.Color(r/2, g/2, b/2));  // Reduce brightness
  StatusLed.show();
}

/**
 * Apply static color to all LEDs
 */
void applyStaticColor() {
  if (!settings.enStatColor) return;
  
  uint32_t color = strtol(settings.staticColor.substring(1).c_str(), NULL, 16);
  
  // Extract RGB components from hex color
  uint8_t r = (color >> 16) & 0xFF;
  uint8_t g = (color >> 8) & 0xFF;
  uint8_t b = color & 0xFF;
  
  // Set status LED to match the static color
  setStatusLED(r, g, b);
  
  // Apply to LED strips
  for (int i = 0; i < settings.numOutputs; i++) {
    for (int j = 0; j < settings.numLedsPerOutput; j++) {
      if (settings.useRGBW) {
        // RGBW mode - add white channel
        strips[i].setPixelColor(j, strips[i].Color(r, g, b, settings.whiteLevel));
      } else {
        // RGB mode
        strips[i].setPixelColor(j, color);
      }
    }
    strips[i].show();
  }
}

